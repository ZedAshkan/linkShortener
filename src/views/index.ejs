<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>
    <div class="max-w-lg mx-auto">
      <form class="flex">
        <input
          type="text"
          placeholder="Paste a link to shorten"
          class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"
        />
        <button type="submit" class="px-8 ml-4 bg-rose-600 text-white rounded">
          go
        </button>
      </form>
      <div id="out"></div>
    </div>
    <script>
      const random = (Date.now() + Math.floor(Math.random() * 1660290034505))
        .toString(36)
        .substring(2, 6);
      console.log(random);

      const form = document.querySelector("form");
      const input = document.querySelector("input");
      const out = document.querySelector("#out");

      form.addEventListener("submit", e => {
        e.preventDefault();
        urlVaidation =
          /^(?:http(s)?:\/\/)?[\w.-]+(?:\.[\w\.-]+)+[\w\-\._~:/?#[\]@!\$&'\(\)\*\+,;=.]+$/;
        urlReg = /^(http|https):\/\/[^ "]+$/;

        if (urlVaidation.test(input.value)) {
          const url = urlReg.test(input.value)
            ? input.value
            : `http://${input.value}`;
          console.log(url);
          data = {
            url: url,
          };

          fetch("/api", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(data),
          })
            .then(res => res.json())
            .then(data => {
              console.log(data);
              input.value = window.location.href + data.id;
              input.classList.add("bg-green-200 disabled");
            })
            .catch(err => {
              console.log(err);
            });
        } else {
          alert("Please enter a valid url");
        }
      });
    </script>
  </body>
</html>
